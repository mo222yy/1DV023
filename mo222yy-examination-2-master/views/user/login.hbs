  <form method="post" action="/user/login" autocomplete="off">
  <h2>Log in</h2>
  <div class="group">
    <input type="text" id="username" placeholder="Insert username here" name="username" required="required" autofocus="autofocus" />
    <label for="username">Username</label>
  </div>

  <div class="group">
    <input type="password" id="password" placeholder="Insert password here" name="password" required="required" />
    <label for="password">Password</label>
  </div>

  <button type="submit" class="btn btn-lg btn-primary">Log in</button>
</form>
